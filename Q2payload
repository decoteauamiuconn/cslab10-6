DELAY 3000
GUI r
DELAY 1000
STRING powershell -ExecutionPolicy Bypass -WindowStyle Hidden
ENTER
DELAY 1000
STRING $path = 'E:\images\fun_wallpaper.jpg'; if (Test-Path $path) { Set-ItemProperty -Path 'HKCU:\Control Panel\Desktop' -Name Wallpaper -Value $path; rundll32.exe user32.dll,UpdatePerUserSystemParameters }
ENTER
DELAY 1000
ALT F4
DELAY 500
GUI d

Ctrl b 
Windows d 


DELAY 1000
GUI r
DELAY 300
STRING cmd.exe
ENTER
DELAY 600
REM add wallpaper path to current user's registry
STRING reg add "HKCU\Control Panel\Desktop" /v Wallpaper /t REG_SZ /d "C:\images\wallpaper.jpg" /f
ENTER
DELAY 400
REM Tell Windows to update system parameters (causes wallpaper refresh)
STRING RUNDLL32.EXE user32.dll,UpdatePerUserSystemParameters
ENTER
DELAY 300
REM Minimize/all show desktop (Win+D)
GUI d
